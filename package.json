{
  "name": "nusantara-valid",
  "version": "0.1.0",
  "description": "Nusantara Valid is a data validator to validate any Indonesian specific civil data such as nik, nip, and many more.",
  "author": {
    "name": "Fajar Setya Budi",
    "url": "https://magicjar.github.io"
  },
  "license": "MIT",
  "main": "dist/nusantara-valid.js",
  "directories": {
    "doc": "docs"
  },
  "keywords": [
    "validator",
    "javascript",
    "indonesia",
    "nik",
    "nip",
    "nisn",
    "npwp",
    "tnkb",
    "postcode",
    "email",
    "mobile-number",
    "telephone-number"
  ],
  "files": [
    "dist/",
    "src/{ts,js}/"
  ],
  "scripts": {
    "clean": "shx rm -rf dist src/js",
    "compile": "npm-run-all --sequential clean compile:ts compile:js minify:*",
    "compile:js": "rollup --config rollup.config.js --sourcemap",
    "compile:ts": "tsc --module ESNext",
    "minify:umd": "uglifyjs --compress typeofs=false,drop_console=true --mangle --comments \"/^!/\" --source-map \"content=dist/nusantara-valid.umd.js.map,includeSources,url=nusantara-valid.umd.js.map\" --output dist/nusantara-valid.umd.js dist/nusantara-valid.umd.js",
    "test": "mocha --require ts-node/register **/*.test.ts"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@rollup/plugin-babel": "^5.0.3",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "chai": "^4.2.0",
    "mocha": "^7.2.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.16.1",
    "shx": "^0.3.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5",
    "uglify-js": "^3.9.4"
  }
}
